<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<% @posts.each do |post| %>
  <div>
    <div> Post by <%= post.user_id %> </div>
    <div> <%= post.caption %> </div>
    <div> 
    <% if post.image.attached? %>
      <%= image_tag post.image, class: "card-img" %>
    <% end %>
    </div>
    <div> <%= post.detail %> </div>
    <div>  <%= link_to 'Show', post %></div>
    <div> Likes: <%= post.like %> </div>
  </div>
  <br> <br>
<% end %>
